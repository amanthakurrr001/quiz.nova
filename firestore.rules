/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model. All user-generated
 * content, including profiles, quizzes, and quiz results, is isolated within a
 * user-specific data tree. This ensures that users can only access and modify their own data.
 *
 * Data Structure: All private user data is nested under the `/users/{userId}` path.
 * This path-based security model simplifies authorization logic and improves performance
 * by avoiding cross-document reads (`get()`) for ownership checks. Sensitive data like
 * API keys are stored in a separate top-level collection and secured via a denormalized
 * `userId` field.
 *
 * Key Security Decisions:
 * - User Enumeration Disabled: Listing the top-level `/users` or `/apiKeys` collections is
 *   explicitly forbidden to protect user privacy and prevent data scraping.
 * - Guest User Data: Guest (anonymous) users are not permitted to write any data to the
 *   database. All guest activity is intended to be ephemeral and handled on the client-side.
 * - Strict Ownership: All operations are gated by checking if the authenticated user's ID
 *   matches the `userId` in the document path or a `userId` field within the document.
 *
 * Denormalization for Authorization: The `/apiKeys` collection uses a denormalized `userId`
 * field on each document. This allows a simple and performant rule (`resource.data.userId == request.auth.uid`)
 * to secure highly sensitive data without needing a slow `get()` or complex path structure.
 *
 * Structural Segregation: User profiles, quizzes, results, and API keys are stored in
 * separate, dedicated collections. This segregation allows for granular security rules
 * tailored to each data type, preventing accidental data exposure.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to abstract and simplify rule logic.

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     * This is the foundation of the ownership model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Ensures an operation is performed by the owner on an existing document.
     * CRITICAL for preventing writes to non-existent documents.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * Validates that the `id` field within a user document matches its path `userId`
     * upon creation and remains unchanged during updates. This maintains relational integrity.
     */
    function hasValidUserIdentity(userId) {
      let isCreating = resource == null;
      return isCreating ? request.resource.data.id == userId : request.resource.data.id == resource.data.id;
    }

    /**
     * Validates that the `userId` field within a subcollection document (e.g., a quiz)
     * matches the owner's `userId` from the path and remains unchanged during updates.
     */
    function hasValidOwnershipLink(userId) {
      let isCreating = resource == null;
      return isCreating ? request.resource.data.userId == userId : request.resource.data.userId == resource.data.userId;
    }

    /**
     * Validates that the `userId` field in a new document matches the creator's UID.
     */
    function isCreatingOwnedDoc() {
      return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    /**
     * Validates that the `userId` in an updated document is not being changed.
     */
    function isOwnershipUnchanged() {
        return request.resource.data.userId == resource.data.userId;
    }

    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && hasValidUserIdentity(userId);
      allow update: if isExistingOwner(userId) && hasValidUserIdentity(userId);
      allow delete: if isExistingOwner(userId);

      match /quizzes/{quizId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidOwnershipLink(userId);
        allow update: if isExistingOwner(userId) && hasValidOwnershipLink(userId);
        allow delete: if isExistingOwner(userId);
      }

      
      match /quizResults/{quizResultId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidOwnershipLink(userId);
        allow update: if isExistingOwner(userId) && hasValidOwnershipLink(userId);
        allow delete: if isExistingOwner(userId);
      }
    }

    
    match /apiKeys/{apiKeyId} {
      allow get: if isSignedIn() && resource != null && isOwner(resource.data.userId);
      allow list: if false;
      allow create: if isCreatingOwnedDoc();
      allow update: if resource != null && isOwner(resource.data.userId) && isOwnershipUnchanged();
      allow delete: if resource != null && isOwner(resource.data.userId);
    }
  }
}